<Window x:Class="Auriga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gxc="http://schemas.panthernet.ru/graphx/"
        xmlns:local="clr-namespace:Auriga"
        xmlns:local1="clr-namespace:Auriga.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <gxc:ZoomControl x:Name="main_zoomctrl">
            <local1:GraphAreaControl x:Name="main_area"/>
        </gxc:ZoomControl>
    </Grid>
</Window>
