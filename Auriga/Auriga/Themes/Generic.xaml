<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Auriga"
    xmlns:views="clr-namespace:Auriga.Views"
    xmlns:graph="clr-namespace:Auriga.GraphControls">

    <Style TargetType="views:GraphEditorArea">
        <Setter Property="Background" Value="White" />
    </Style>

    <Style TargetType="{x:Type graph:GraphArrow}">
        <Setter Property="Stroke" Value="MediumPurple" />
        <Setter Property="StrokeThickness" Value="2" />
    </Style>
</ResourceDictionary>
