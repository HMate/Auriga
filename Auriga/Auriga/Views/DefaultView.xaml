<UserControl x:Class="Auriga.Views.DefaultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Auriga.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Content="Show Awesome" Margin="0,178,120,168" HorizontalAlignment="Right" Width="257"
                Command="{Binding DataContext.ShowGraphEditor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        <Button Content="Dot Editor" HorizontalAlignment="Left" Margin="120,178,0,0" VerticalAlignment="Top" Height="104" Width="257"
                Command="{Binding DataContext.ShowDotEditor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
    </Grid>
</UserControl>
