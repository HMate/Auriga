<UserControl x:Class="Auriga.Views.BrainfuckVisualizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Auriga.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <RichTextBox x:Name="TextEditor" Grid.Column="0" Grid.Row="0"/>

        <ToolBarTray x:Name="Toolbar" Grid.Column="1" Grid.Row="0" Orientation="Vertical">
            <ToolBar  Background="CadetBlue" Margin="0,0,-60,0">
                <Button ToolTip="load brainfuck" Content="-&gt;" Click="Button_LoadCode"/>
            </ToolBar>
        </ToolBarTray>
        <views:GraphEditor x:Name="GraphEditor" Grid.Column="2" Grid.Row="0">
        </views:GraphEditor>
    </Grid>
</UserControl>
